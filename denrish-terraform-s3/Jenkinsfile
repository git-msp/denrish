pipeline {
  agent any

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-creds')
    AWS_SECRET_ACCESS_KEY = credentials('aws-access-creds')
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/git-msp/denrish-terraform-s3.git'
      }
    }

    stage('Terraform Init') {
      steps {
        sh 'terraform init'
      }
    }

    stage('Terraform Plan') {
      steps {
        sh 'terraform plan'
      }
    }

    stage('Terraform Apply') {
      steps {
        input message: 'Approve S3 bucket creation?'
        sh 'terraform apply -auto-approve'
      }
    }
  }
}

